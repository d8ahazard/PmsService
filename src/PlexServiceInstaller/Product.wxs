<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
    <Product Id="*" Name="Plex Service" Language="1033" Version="1.1.9" Manufacturer="cjmurph/digitalhigh" UpgradeCode="daa483bb-c7e1-4c79-a4d6-3c2c4c3d9daf">
        <?define PmsTrayBasePath = "..\PlexServiceTray\bin\publish\" ?>
        <?define PmsBasePath = "..\PlexService\bin\publish\" ?>
        <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" SummaryCodepage="1252" />
        <Binary Id="success_bmp" SourceFile="$(sys.SOURCEFILEDIR)success.bmp" />
        <Binary Id="error_bmp" SourceFile="$(sys.SOURCEFILEDIR)error.bmp" />
        <Binary Id="ActiveDirectory" SourceFile="$(sys.SOURCEFILEDIR)\ActiveDirectory.dll" />
        <CustomAction Id="DirectoryObjectPicker" BinaryKey="ActiveDirectory" DllEntry="DirectoryObjectPicker" Execute="immediate" Return="check" />
        <Binary Id="UserPrivileges" SourceFile="$(sys.SOURCEFILEDIR)\UserPrivileges.dll" />
        <CustomAction Id="CheckCredentials" BinaryKey="UserPrivileges" DllEntry="CheckCredentials" Execute="immediate" Return="check" />
        <CustomAction Id="CheckPrivilege" BinaryKey="UserPrivileges" DllEntry="CheckPrivilege" Execute="immediate" Return="check" />
        <CustomAction Id="GetUserInfo" BinaryKey="UserPrivileges" DllEntry="GetUserInfo" Execute="immediate" Return="check" />
        <CustomAction Id="GetUserNameFormatted" BinaryKey="UserPrivileges" DllEntry="GetUserNameFormat" Execute="immediate" Return="ignore" />
        <Property Id="ARPPRODUCTICON" Value="PlexServiceTray.exe" />
        <Property Id="ARPURLINFOABOUT" Value="https://github.com/cjmurph/PmsService" />
        <Property Id="ARPHELPLINK" Value="https://forums.plex.tv/index.php/topic/93994-pms-as-a-service/" />
        <Property Id="ASSISTANCE_START_VIA_REGISTRY">1</Property>
        <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
        <Media Id="1" Cabinet="PlexService.cab" EmbedCab="yes" />
        <Property Id="SERVICE_USER" Admin="yes" />
        <Property Id="SERVICE_PASSWORD" Admin="yes" />
        <Feature Id="PlexServiceFeature" Title="Plex Service" Description="Plex Service 1.1.9" Level="1" ConfigurableDirectory="INSTALLDIR">
            <ComponentRef Id="LicensesComponent" />
            <ComponentRef Id="PlexServiceStartMenu" />
            <ComponentRef Id="PlexServiceHKLM" />
            <ComponentRef Id="PlexServiceProgramMenuFolder" />
            <ComponentRef Id="PlexServiceComponent" />
            <ComponentRef Id="PlexServicePdbComponent" />
            <ComponentRef Id="AppConfigComponent" />
            <ComponentRef Id="PlexServiceDllComponent" />
            <ComponentRef Id="PlexServiceXmlComponent" />
            <ComponentRef Id="WebConfigComponent" />
        </Feature>
        <Feature Id="PlexServiceTrayFeature" Title="Plex Service Tray" Description="Plex Service Tray 1.1.9" Level="1" ConfigurableDirectory="INSTALLDIR">
            <ComponentRef Id="PlexServiceTrayAutostart" />
            <ComponentRef Id="PlexServiceStartMenu" />
            <ComponentRef Id="PlexServiceHKLM" />
            <ComponentRef Id="PlexServiceProgramMenuFolder" />
            <ComponentRef Id="PlexServiceTrayComponent" />
            <ComponentRef Id="PlexServiceTrayPdbComponent" />
        </Feature>
        <UIRef Id="CaTestUI" />
        <UI Id="CaTestUI">
            <TextStyle Id="WixUI_Font_Normal" FaceName="Tahoma" Size="8" />
            <TextStyle Id="WixUI_Font_Bigger" FaceName="Tahoma" Size="12" />
            <TextStyle Id="WixUI_Font_Title" FaceName="Tahoma" Size="9" Bold="yes" />
            <Property Id="DefaultUIFont" Value="WixUI_Font_Normal" />
            <Property Id="WixUI_Mode" Value="InstallDir" />
            <Property Id="ARPNOMODIFY" Value="1" />
            <DialogRef Id="ErrorDlg" />
            <DialogRef Id="FatalError" />
            <DialogRef Id="FilesInUse" />
            <DialogRef Id="MsiRMFilesInUse" />
            <DialogRef Id="PrepareDlg" />
            <DialogRef Id="ProgressDlg" />
            <DialogRef Id="ResumeDlg" />
            <DialogRef Id="UserExit" />
            <DialogRef Id="ServiceCredentialsDlg" />
            <Publish Dialog="ExitDialog" Control="Finish" Event="EndDialog" Value="Return" Order="999">1</Publish>
            <Publish Dialog="ExitDialog" Control="Finish" Event="DoAction" Value="LaunchApplication" Order="999">
                WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 and NOT Installed
            </Publish>
            <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="ServiceCredentialsDlg">1</Publish>
            <Publish Dialog="ServiceCredentialsDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="1">
                Installed
            </Publish>
            <Publish Dialog="ServiceCredentialsDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="2">NOT
                Installed
            </Publish>
            <Publish Dialog="ServiceCredentialsDlg" Control="Next" Event="NewDialog" Value="VerifyReadyDlg" Order="2">
                1
            </Publish>           
            <Publish Dialog="VerifyReadyDlg" Control="Back" Event="NewDialog" Value="ServiceCredentialsDlg" Order="1">
                NOT Installed OR WixUI_InstallMode="Change"
            </Publish>
            <Publish Dialog="MaintenanceTypeDlg" Control="Back" Event="NewDialog" Value="MaintenanceWelcomeDlg">1
            </Publish>
        </UI>
        <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch Tray Application" />
        <UIRef Id="WixUI_Common" />
        <Property Id="WixShellExecTarget" Value="[#PlexServiceTrayExe]" />
        <CustomAction Id="LaunchApplication" BinaryKey="WixCA" DllEntry="WixShellExec" Impersonate="yes" />
    </Product>
    <Fragment>
        <Directory Id="TARGETDIR" Name="SourceDir">
            <Directory Id="ProgramFilesFolder">
                <Directory Id="INSTALLDIR" Name="Plex Service">
                    <Component Id="PlexServiceComponent" Guid="*">
                        <File Id="PLEXSERVICE.EXE" Name="PlexService.exe" Source="$(var.PmsBasePath)PlexService.exe" KeyPath="yes" />
                        <ServiceInstall Id="ServiceInstaller" Type="ownProcess" Vital="yes" Name="PlexService" DisplayName="PlexService" Description="Plex Media Server as a Service" Start="auto" Account="[SERVICE_USERNAME]" Password="[SERVICE_PASSWORD]" ErrorControl="normal">
                            <ServiceDependency Id="LanmanServer" />
                        </ServiceInstall>
                        <ServiceControl Id="StartService" Start="install" Stop="install" Remove="uninstall" Name="PlexService" Wait="no" />
                        <util:ServiceConfig ServiceName="PlexService" FirstFailureActionType="restart" SecondFailureActionType="restart" ThirdFailureActionType="restart" ResetPeriodInDays="1" RestartServiceDelayInSeconds="20" />
                        <util:User Id="user" CreateUser="no" Name="[SERVICE_USERNAME]" Password="[SERVICE_PASSWORD]" LogonAsService="yes" UpdateIfExists="yes" FailIfExists="no" RemoveOnUninstall="no" />
                    </Component>
                    <Component Id="PlexServicePdbComponent" Guid="*">
                        <File Id="PLEXSERVICE.PDB" Name="PlexService.pdb" Source="$(var.PmsBasePath)PlexService.pdb" KeyPath="yes" />
                    </Component>
                    <Component Id="AppConfigComponent" Guid="*">
                        <File Id="APP.CONFIG" Name="app.config" Source="$(var.PmsBasePath)app.config" KeyPath="yes" />
                    </Component>
                    <Component Id="PlexServiceDllComponent" Guid="*">
                        <File Id="PLEXSERVICE.DLL.CONFIG" Name="PlexService.dll.config" Source="$(var.PmsBasePath)PlexService.dll.config" KeyPath="yes" />
                    </Component>
                    <Component Id="PlexServiceXmlComponent" Guid="*">
                        <File Id="PLEXSERVICE.XML" Name="PlexService.xml" Source="$(var.PmsBasePath)PlexService.xml" KeyPath="yes" />
                    </Component>
                    <Component Id="WebConfigComponent" Guid="*">
                        <File Id="WEB.CONFIG" Name="web.config" Source="$(var.PmsBasePath)web.config" KeyPath="yes" />
                    </Component>
                    <Component Id="LicensesComponent" Guid="9C268F52-1375-490C-8126-BB0B39DADBD5">
                        <File Id="NewtonsoftJsonLic" Source="$(var.SolutionDir)\ThirdPartyLibraries\Newtonsoft.Json-license.txt" />
                        <File Id="MsiExtLic" Source="$(var.SolutionDir)\ThirdPartyLibraries\msiext-license.txt" />
                        <File Id="MahAppsLic" Source="$(var.SolutionDir)\ThirdPartyLibraries\mahapps-license.txt" />
                        <File Id="OokiiLic" Source="$(var.SolutionDir)\ThirdPartyLibraries\ookiidialogs-license.txt" />
                        <File Id="FontAwesomeWPFLic" Source="$(var.SolutionDir)\ThirdPartyLibraries\FontAwesome-WPF.txt" />
                        <File Id="PlexServiceLic" Source="$(var.SolutionDir)LICENCE.rtf" />
                    </Component>
                    <Component Id="PlexServiceHKLM" Guid="FE22697D-2A56-4F19-AF02-E218AD4D1E29">
                        <RegistryKey Id="PlexServiceHKLM" Root="HKLM" Key="Software\[ProductName]" ForceCreateOnInstall="yes" ForceDeleteOnUninstall="yes">
                            <RegistryValue Type="string" Name="InstallDir" Value="[INSTALLDIR]" KeyPath="yes" />
                        </RegistryKey>
                    </Component>
                </Directory>
                <Directory Id="PMSTRAYINSTALLDIR" Name="Plex Service Tray">
                    <Component Id="PlexServiceStartMenu" Guid="392D3A0A-0B78-4ACA-97E0-8DDF3BBB9966">
                        <RegistryKey Id="StartMenuPlexServiceTrayHKCU" Root="HKCU" Key="Software\[ProductName]" ForceCreateOnInstall="yes" ForceDeleteOnUninstall="yes">
                            <RegistryValue Type="integer" Value="1" Name="StartMenuSC" KeyPath="yes" />
                        </RegistryKey>
                        <Shortcut Id="PlexServiceTrayStartMenu" Directory="PlexServiceProgramMenuFolder" Name="Plex Service Tray" Target="[INSTALLDIR]PlexServiceTray.exe" WorkingDirectory="INSTALLDIR" Icon="PlexServiceTray.exe" IconIndex="0" Advertise="no" />
                    </Component>
                    <Component Id="PlexServiceTrayComponent" Guid="*">
                        <File Id="PLEXSERVICETRAY.EXE" Name="PlexServiceTray.exe" Source="$(var.PmsTrayBasePath)PlexServiceTray.exe" KeyPath="yes" />
                    </Component>
                    <Component Id="PlexServiceTrayPdbComponent" Guid="*">
                        <File Id="PLEXSERVICETRAY.PDB" Name="PlexServiceTray.pdb" Source="$(var.PmsTrayBasePath)PlexServiceTray.pdb" KeyPath="yes" />
                    </Component>
                    <Component Id="PlexServiceTrayAutostart" Guid="5BD99A14-BFA7-4D0A-9A0F-462C2AA1BEC1">
                        <RegistryValue Id="PlexServiceTrayAs.rst" Root="HKLM" Action="write" Key="Software\Microsoft\Windows\CurrentVersion\Run" Name="PlexServiceTray" Value="[INSTALLDIR]PlexServiceTray.exe" Type="string" />
                        <Condition>ASSISTANCE_START_VIA_REGISTRY</Condition>
                    </Component>
                </Directory>
            </Directory>
            <Directory Id="ProgramMenuFolder" Name="Programs">
                <Directory Id="PlexServiceProgramMenuFolder" Name="Plex Service">
                    <Component Id="PlexServiceProgramMenuFolder" Guid="*">
                        <RemoveFolder Id="PlexServiceProgramMenuFolder" On="uninstall" />
                        <RegistryValue Root="HKCU" Key="Software\[ProductName]" Type="string" Value="" KeyPath="yes" />
                    </Component>
                </Directory>
            </Directory>
            <Directory Id="DesktopFolder" Name="Desktop" />
        </Directory>
    </Fragment>
    <Fragment>
        <WixVariable Id="WixUIBannerBmp" Value="$(sys.SOURCEFILEDIR)\PlexService.bmp" />
        <WixVariable Id="WixUIDialogBmp" Value="$(sys.SOURCEFILEDIR)\PlexServiceBack.bmp" />
        <Icon SourceFile="$(var.PlexServiceTray.TargetPath)" Id="PlexServiceTray.exe" />
    </Fragment>
    <?include ServiceCredentialsUI.wxi ?>
</Wix>